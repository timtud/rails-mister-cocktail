<div class="container">

  <h1>  <%= @cocktail.name.capitalize %></h1>
    <% if @cocktail.photo? %>
    <%= cl_image_tag @cocktail.photo.path, class: "img-thumbnail", width: 200, height: 300, crop: :fill %>
    <% end %>

<div class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <% ingredient = Ingredient.find(dose.ingredient_id) %>
    <li class="list-group-item">
      <h4 class="list-group-item-heading"><%= ingredient.name %></h4>
      <p class="list-group-item-text"><%= dose.description %></p>
      <%= link_to "Delete", cocktail_dose_path( @cocktail, dose), class: 'btn-medium btn-danger ' , method: :delete, data: { confirm: 'Are you certain you want to delete this?' }  %>
    </li>
    <% end %>
</div>

<%= simple_form_for [@cocktail, @dose] do |f| %>
<%= f.error_notification %>
  <%=f.input :description  %>
  <%=f.input :ingredient_id , collection: Ingredient.all  %>
  <%= f.submit "Add dose", class: 'btn btn-primary' %>
  <%= link_to 'Back', cocktails_path, class: 'btn btn-danger' %>
<% end %>
</div>


